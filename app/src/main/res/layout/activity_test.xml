<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical" android:layout_width="match_parent"
android:layout_height="match_parent"
    >





    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingLeft="5dp">
    <ProgressBar
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:id="@+id/progress_bar"
        android:progressDrawable="@drawable/horizontalprogressbar"

        />

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/total"
        android:textColor="@color/hint"
        android:layout_marginLeft="10dp"/>
    </android.support.v7.widget.LinearLayoutCompat>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.github.mikephil.charting.charts.HorizontalBarChart
        android:id="@+id/chart"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="15dp"
        android:layout_width="350dp"
        android:layout_height="380dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_view_weeksteps"
        android:layout_height="wrap_content"
        android:layout_width="120dp"
        android:layout_marginTop="30dp"
        android:textColor="@color/font"
        android:background="@color/button"
        android:text="@string/view_steps"
        android:drawableLeft="@drawable/running_man"
        android:layout_marginStart="40dp"


        />
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_view_weekcalories"
            android:layout_height="wrap_content"
            android:layout_width="120dp"
            android:layout_marginTop="30dp"
            android:textColor="@color/font"
            android:background="@color/button"
            android:text="@string/week_calories"
            android:drawableLeft="@drawable/rowing_man"
            android:layout_marginLeft="50dp"


            />

    </LinearLayout>
</LinearLayout>


</RelativeLayout>